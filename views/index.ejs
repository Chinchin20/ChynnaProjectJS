<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Store</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Shoe Inventory</h1>
    <a href="/shoes/add" class="button">Add New Shoe</a>
    <table>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        <% shoes.forEach(shoe => { %>
            <tr>
                <td><%= shoe.name %></td>
                <td><%= shoe.size %></td>
                <td><%= shoe.price %></td>
                <td>
                    <a href="/shoes/edit/<%= shoe.id %>" class="button">Edit</a>
                    <form action="/shoes/delete/<%= shoe.id %>" method="POST" style="display:inline;">
                        <button type="submit" class="button danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
